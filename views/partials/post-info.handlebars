<article class="post">
    <div class="whole-post">
        <div class="info-section">
            <div class="post-name">
                <a href="/post/{{id}}" class="links">{{title}}</a>
            </div>
            <div class="created-by">
                <p id="comment-subtitle">
                    Posted by <b>{{user.username}} </b> on <b>{{created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{post_text}}</p>
        </div>
    </div>
</article>